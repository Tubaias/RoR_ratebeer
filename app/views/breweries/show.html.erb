<p id="notice"><%= notice %></p>

<h2>
  <%= @brewery.name %>
</h2>

<i>
  Established in <%= @brewery.year %>
</i>

<p>
  Number of beers <%= @brewery.beers.count %>
</p>

<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to "#{beer.name}", beer %>
 <% end %>
</p>

<% if @brewery.ratings.empty? %>
  <p>brewery's beers have not yet been rated!</p>
<% else %>
  <p>
    Has <%= pluralize(@brewery.ratings.count,"rating") %>, average <%= @brewery.average_rating %>
  </p>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_brewery_path(@brewery) %> |
  <td><%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td> |
<% end %>
<%= link_to 'Back', breweries_path %>
