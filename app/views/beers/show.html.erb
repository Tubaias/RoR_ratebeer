<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
  <p>beer has not yet been rated!</p>
<% else %>
  <p>
    Has <%= pluralize(@beer.ratings.count,"rating") %>, average <%= @beer.average_rating %>
  </p>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_beer_path(@beer) %> |
  <td><%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } %></td> |
<% end %>
<%= link_to 'Back', beers_path %>
